          .header__constructor
            a.btn(href='#') Онлайн-конструктор
          form.header__search
            input.header__searchInput(placeholder="Поиск по авто")
            button.header__searchIcon: +the_svg('search')

          a.header__searchButton
            +the_svg('search')

          a.header__cartButton
            +the_svg('cart')
